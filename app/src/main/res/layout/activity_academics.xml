<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bless"
        tools:context="com.example.leninbakhara.rentals.Academics">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Academics"
              android:textSize="40sp"
              android:textStyle="bold"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="10dp"
              android:id="@+id/academics2"/>
    <TableRow
            android:id="@+id/hr"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#444"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_below="@id/academics2"/>
    <ImageView android:layout_width="450px"
               android:layout_height="500px"
               android:src="@mipmap/mftc"
               android:layout_below="@+id/hr"
               android:layout_marginTop="10dp"
               android:id="@+id/mftc"/>
    <TableRow
            android:id="@+id/hr2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#444"
            android:layout_below="@id/mftc"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/mftc"
              android:layout_below="@id/hr"
              android:text="Move Fast with C++"
              android:textSize="22sp"
              android:id="@+id/mftct"
              android:textColor="#000000"
              android:layout_marginTop="20dp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/mftc"
              android:layout_below="@id/mftct"
              android:text="By Sumita Arora"
              android:textSize="18sp"
              android:id="@+id/mftca"
              android:textColor="#505050"/>
    <ImageView android:layout_width="450px"
               android:layout_height="500px"
               android:src="@mipmap/mhtml"
               android:layout_below="@+id/hr2"
               android:layout_marginTop="10dp"
               android:id="@+id/mhtml"/>
    <TableRow
            android:id="@+id/hr3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#444"
            android:layout_below="@id/mhtml"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/mhtml"
              android:layout_below="@id/hr2"
              android:text="Mastering HTML, CSS and Java Script"
              android:textSize="22sp"
              android:id="@+id/mhtmlt"
              android:textColor="#000000"
              android:layout_marginTop="20dp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/mhtml"
              android:layout_below="@id/mhtmlt"
              android:text="By Laura Lemay"
              android:textSize="18sp"
              android:id="@+id/mhtmla"
              android:textColor="#505050"/>
    <ImageView android:layout_width="450px"
               android:layout_height="500px"
               android:src="@drawable/python"
               android:layout_below="@+id/hr3"
               android:layout_marginTop="10dp"
               android:id="@+id/python"/>
    <TableRow
            android:id="@+id/hr4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#444"
            android:layout_below="@id/python"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/python"
              android:layout_below="@id/hr3"
              android:text="Python-The Complete Reference"
              android:textSize="22sp"
              android:id="@+id/pythont"
              android:textColor="#000000"
              android:layout_marginTop="20dp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/python"
              android:layout_below="@id/pythont"
              android:text="By Martin C. Brown "
              android:textSize="18sp"
              android:id="@+id/pythona"
              android:textColor="#505050"/>



</RelativeLayout>
</ScrollView>