<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/bless"
            tools:context="com.example.leninbakhara.rentals.Fiction">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Fiction"
                  android:textSize="40sp"
                  android:textStyle="bold"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="10dp"
                  android:id="@+id/fiction2"/>
        <TableRow
                android:id="@+id/hr"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#444"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_below="@id/fiction2"/>
        <ImageView android:layout_width="450px"
                   android:layout_height="500px"
                   android:src="@drawable/clht"
                   android:layout_below="@+id/hr"
                   android:layout_marginTop="10dp"
                   android:id="@+id/clht"/>
        <TableRow
                android:id="@+id/hr2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#444"
                android:layout_below="@id/clht"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@id/clht"
                  android:layout_below="@id/hr"
                  android:text="Can Love Happen Twice?"
                  android:textSize="22sp"
                  android:id="@+id/clhtt"
                  android:textColor="#000000"
                  android:layout_marginTop="20dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@id/clht"
                  android:layout_below="@id/clhtt"
                  android:text="By Ravindra Singh"
                  android:textSize="18sp"
                  android:id="@+id/clhta"
                  android:textColor="#505050"/>
        <ImageView android:layout_width="450px"
                   android:layout_height="500px"
                   android:src="@mipmap/thir"
                   android:layout_below="@+id/hr2"
                   android:layout_marginTop="10dp"
                   android:id="@+id/thir"/>
        <TableRow
                android:id="@+id/hr3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#444"
                android:layout_below="@id/thir"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@id/thir"
                  android:layout_below="@id/hr2"
                  android:text="The Girl in Room No. 105"
                  android:textSize="22sp"
                  android:id="@+id/thirt"
                  android:textColor="#000000"
                  android:layout_marginTop="20dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@id/thir"
                  android:layout_below="@id/thirt"
                  android:text="By Chetan Bhagat"
                  android:textSize="18sp"
                  android:id="@+id/thira"
                  android:textColor="#505050"/>
        <ImageView android:layout_width="450px"
                   android:layout_height="500px"
                   android:src="@mipmap/ithals"
                   android:layout_below="@+id/hr3"
                   android:layout_marginTop="10dp"
                   android:id="@+id/ithals"/>
        <TableRow
                android:id="@+id/hr4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#444"
                android:layout_below="@id/ithals"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@id/ithals"
                  android:layout_below="@id/hr3"
                  android:text="I too had a Love Story"
                  android:textSize="22sp"
                  android:id="@+id/ithalst"
                  android:textColor="#000000"
                  android:layout_marginTop="20dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@id/ithals"
                  android:layout_below="@id/ithalst"
                  android:text="By Ravindra Singh"
                  android:textSize="18sp"
                  android:id="@+id/ithalsa"
                  android:textColor="#505050"/>
    </RelativeLayout>
</ScrollView>