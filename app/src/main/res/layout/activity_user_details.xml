<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bless"
        tools:context="com.example.leninbakhara.rentals.UserDetails">
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Thank you for choosing. Please fill the details to rent"
              android:textSize="20sp"
              android:textStyle="bold"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="20dp"
              android:id="@+id/thnx"
              android:textColor="#000000"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Full Name"
              android:textSize="20sp"
              android:textStyle="bold"
              android:layout_marginTop="30dp"
              android:layout_marginLeft="20dp"
              android:id="@+id/name"
              android:textColor="#000000"
              android:layout_below="@+id/thnx"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="15"
            android:id="@+id/namedit"
            android:layout_below="@+id/thnx"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:contentDescription="Name"
            android:layout_toRightOf="@+id/name"
            android:layout_marginRight="20dp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="E-Mail"
              android:textSize="20sp"
              android:textStyle="bold"
              android:layout_marginTop="35dp"
              android:layout_marginLeft="20dp"
              android:id="@+id/email"
              android:textColor="#000000"
              android:layout_below="@+id/name"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="15"
            android:id="@+id/emailedit"
            android:layout_below="@+id/namedit"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="52dp"
            android:contentDescription="Name"
            android:layout_toRightOf="@+id/email"
            android:layout_marginRight="20dp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Contact No."
              android:textSize="20sp"
              android:textStyle="bold"
              android:layout_marginTop="45dp"
              android:layout_marginLeft="20dp"
              android:id="@+id/phone"
              android:textColor="#000000"
              android:layout_below="@+id/email"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="15"
            android:id="@+id/numberedit"
            android:layout_below="@+id/emailedit"
            android:layout_toRightOf="@+id/phone"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="20dp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Select number of days to rent:"
              android:textSize="20sp"
              android:textStyle="bold"
              android:layout_marginTop="30dp"
              android:layout_marginLeft="20dp"
              android:id="@+id/rent2"
              android:textColor="#000000"
              android:layout_below="@+id/phone"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="8"
            android:id="@+id/rentedit"
            android:layout_below="@+id/rent2"
            android:layout_toRightOf="@+id/phone"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>
    <Button android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="PRICE"
            android:background="@drawable/border"
            android:layout_below="@+id/rentedit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/soo"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Total Amount: Rs"
              android:textSize="20sp"
              android:textStyle="bold"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="20dp"
              android:id="@+id/price"
              android:textColor="#000000"
              android:layout_below="@+id/soo"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Full Address"
              android:textSize="20sp"
              android:textStyle="bold"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="20dp"
              android:id="@+id/address"
              android:textColor="#000000"
              android:layout_below="@+id/price"/>
    <EditText
            android:layout_width="234dp"
            android:layout_height="88dp"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/addressedit"
            android:layout_toRightOf="@+id/address"
            android:layout_below="@+id/price"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"/>
    <Button android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="RENT NOW"
            android:background="@drawable/border"
            android:layout_below="@+id/addressedit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/go"/>


</RelativeLayout>
</ScrollView>